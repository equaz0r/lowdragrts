{
    "compilerOptions": {
        "target": "ES6",
        "module": "ES6",
        "strict": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "sourceMap": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
} 